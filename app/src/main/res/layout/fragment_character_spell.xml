<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.character_spells.CharacterSpellsFragment"
    android:paddingHorizontal="20dp">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/character_sheets_spells_button"
        tools:listitem="@layout/spells_list_item"
        tools:itemCount="5"
        android:id="@+id/character_sheets_spells_list"
        >

    </androidx.recyclerview.widget.RecyclerView>
    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Adicionar"
        app:layout_constraintTop_toBottomOf="@+id/character_sheets_spells_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/character_sheets_spells_button"
        >
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>